<div id="<%= dom_id task %>">
  <p>
    <strong>Name:</strong>
    <%= task.name %>
  </p>

  <p>
    <strong>Project:</strong>
    <%= task.project&.name || nil %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= task.description %>
  </p>

  <p>
    <strong>Notes:</strong>
    <%= task.notes %>
  </p>

  <p>
    <strong>Deadline:</strong>
    <%= task.deadline %>
  </p>

  <p>
    <strong>Completed:</strong>
    <%= task.completed %>
  </p>

  <p>
    <strong>Assigned Users:</strong>
    

    
    <% if @task && @task.users.any? %>
      <%= @task.user_ids %>   
      <% @task.users.each do |user| %>
        <%= user.email %>
        <%= user.id %>
      <% end %>
    <% end %>

  </p>  

</div>
