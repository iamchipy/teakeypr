<p style="color: green"><%= notice %></p>

<% content_for :title, "Tasks" %>

<h1>Tasks</h1>

<div id="tasks">
  <% if @tasks.present? %>
    <% @tasks.each do |task| %>
      <%= render task %>
      <p><%= link_to "Show this task", task %></p>
    <% end %>
  <% else %>
    <p>No tasks found.</p>
  <% end %>
</div>

<%= link_to "New task", new_task_path %>

