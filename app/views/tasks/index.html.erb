<%# app/views/tasks/index.html.erb %>
<% content_for :title, "Tasks" %>

<h1>Tasks</h1>
<%= link_to "New task", new_task_path, class: "btn-link" %>

<div id="tasks">
  <% if @tasks.present? %>
    <% @tasks.each do |task| %>
      <%= render task %>  
    <% end %>
  <% else %>
    <p>No tasks found.</p>
  <% end %>
</div>



