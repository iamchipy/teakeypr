<div id="<%= dom_id project %>">
  <p>
    <strong>Name:</strong>
    <%= project.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= project.description %>
  </p>


  <h3>Tasks</h3>
  <%= link_to 'Add Task', new_task_path(project_id: @project.id) %>
  <ul>
    <% @project.tasks.each do |task| %>
      <li><%= link_to task.name, task_path(task) %></li>
    <% end %>
  </ul>
</div>
